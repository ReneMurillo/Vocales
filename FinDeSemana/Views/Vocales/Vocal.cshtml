
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Vocales en una palabra
                </div>
                <div class="panel-body">
                    <form action="Vocal" method="post" id="formulario">
                        <div class="form-group">
                            <input type="text" class="form-control" name="palabra" onkeypress="return check(event)" placeholder="Ingrese una palabra" required autocomplete="off"/>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-info">Contar</button>
                        </div>
                    </form>
                    <div class="jumbotron">
                        @ViewBag.Mensaje
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>
<script type="text/javascript">
    function check(e) {
        tecla = (document.all) ? e.keyCode : e.which;

        if (tecla == 8) {
            return true;
        }

        patron = /[A-Z a-z]/;
        tecla_final = String.fromCharCode(tecla);
        return patron.test(tecla_final);
    } 

</script>

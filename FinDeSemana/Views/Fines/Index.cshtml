
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Días de la semana
                </div>
                <div class="panel-body">
                    <form action="/" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="dia" onkeypress="return check(event)" placeholder="Ingrese el día" required autocomplete="off"/>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-info">Verificar</button>
                        </div>
                    </form>
                    <div class="jumbotron">
                        @ViewBag.Mensaje
                    </div>
                </div>
            </div> 
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>

<script type="text/javascript">
    function check(e) {
        tecla = (document.all) ? e.keyCode : e.which;

        if (tecla == 8) {
            return true;
        }

        patron = /[A-Za-z]/;
        tecla_final = String.fromCharCode(tecla);
        return patron.test(tecla_final);
    }

</script>